@model RestaurantViewModel
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Ресторан";
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
<script src="lib\lightbox2-dev\dist\js\lightbox.js"></script>
<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" type="text/css" href="~/css/shrift1.css">


<style>
    body {
        background: #fef7af
    }

    .stroke {
        text-shadow: black 3px 3px 0, black -3px -3px 0, black -3px 3px 0, black 3px -3px 0;
    }
</style>

<title>Платформа ресторанов</title>

<body>

    <div class="container text-center">

<form asp-action="AddComment" method="get">
    <div class="text-center">
        @if (Model != null)
        {
            var item = Model;
            <h1 class="display-4">@item.Name</h1>
            <p> @item.Address </p>
            <p> @item.Description </p>
            <p> @item.Email </p>
            <p> @item.Phone </p>
            <p></p>
            <h1>Меню</h1>
            @foreach (var d in @item.Dishes)
            {
                <h2>@d.NameDish </h2>
                <p>@d.Type </p>
                <p>@d.Composition </p>
                <p>@d.CookingTime </p>
            }
            <h1>Столики</h1>
            @foreach (var t in @item.TableRestaurants)
            {
                <h2>@t.NumberTable </h2>
                <p>@t.Status </p>
            }
            <h1>Комментарии</h1>
            @foreach (var e in @item.Comments)
            {
                <p>@e.Employee.FullName </p>
                <p>@e.DateComment </p>
                <p>@e.Point </p>
                <p>@e.DataComment </p>
            }
            @if (SignInManager.IsSignedIn(User))
            {
                    <a href="/Restaurants/AddComment/@item.Id"><h1>Оставить отзыв</h1></a>
            }
        }
    </div>
</form>