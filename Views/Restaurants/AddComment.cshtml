@model RestaurantTimBaig.ViewModels.Restaurants.NewCommentViewModel
@{
    ViewData["Title"] = "Добавление нового комментария";
    Layout = "_LoginLayout";
}

<form asp-controller="Restaurants" asp-action="AddCommentRestaurant" method="post">
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group bmd-form-group">
            <label asp-for="Point" class="bmd-label-floating"></label>
            <input asp-for="Point" class="form-control">
            <span asp-validation-for="Point" class="text-danger"></span>
        </div>
        <input asp-for="IdRestaurant" type="hidden" value="@ViewBag.id" />
        <div class="form-group bmd-form-group">
            <label for="exampleFormControlTextarea1">Комментарий</label>
            <textarea asp-for="DataComment" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>

        <button type="submit">Добавить</button>

    </div>
 </form>


